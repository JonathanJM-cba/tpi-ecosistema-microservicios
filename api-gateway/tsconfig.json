{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs", // << Permite usar import/export
    "moduleResolution": "Node", // << Para que resuelva los mÃ³dulos como Node.js
    "rootDir": "./src",
    "outDir": "./dist",
